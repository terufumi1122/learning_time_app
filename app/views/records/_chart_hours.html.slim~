h1 chart_hours

canvas#chartHours width="400" height="400"
javascript:
  var ctx = document.getElementById('chartHours').getContext('2d');
  var myChart = new Chart(ctx, {
      type: 'bar',
      data: {
          labels: [
              moment().add(-8, 'hours').format('h:mm'),
              moment().add(-7, 'hours').format('h:mm'),
              moment().add(-6, 'hours').format('h:mm'),
              moment().add(-5, 'hours').format('h:mm'),
              moment().add(-4, 'hours').format('h:mm'),
              moment().add(-3, 'hours').format('h:mm'),
              moment().add(-2, 'hours').format('h:mm'),
              moment().add(-1, 'hours').format('h:mm')
          ],
          datasets: [{
              label: '# of Votes',
              data: [
                gon.learning_time_of_7hours_ago,
                gon.learning_time_of_6hours_ago,
                gon.learning_time_of_5hours_ago,
                gon.learning_time_of_4hours_ago,
                gon.learning_time_of_3hours_ago,
                gon.learning_time_of_2hours_ago,
                gon.learning_time_of_1hour_ago,
                ],
              backgroundColor: [
                  'rgba(255, 99, 132, 0.2)',
                  'rgba(54, 162, 235, 0.2)',
                  'rgba(255, 206, 86, 0.2)',
                  'rgba(75, 192, 192, 0.2)',
                  'rgba(153, 102, 255, 0.2)',
                  'rgba(255, 159, 64, 0.2)'
              ],
              borderColor: [
                  'rgba(255, 99, 132, 1)',
                  'rgba(54, 162, 235, 1)',
                  'rgba(255, 206, 86, 1)',
                  'rgba(75, 192, 192, 1)',
                  'rgba(153, 102, 255, 1)',
                  'rgba(255, 159, 64, 1)'
              ],
              borderWidth: 1
          }]
      },
      options: {
          scales: {
              yAxes: [{
                  ticks: {
                      beginAtZero: true
                  }
              }]
          }
      }
  });
